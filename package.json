        "prettier-plugin-tailwindcss": "^0.6.14",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "tailwind-merge": "^3.2.0",
        "tailwindcss": "^4.1.3",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1",
        "vite": "^6.2.0",
        "vite-plugin-css-injected-by-js": "^3.5.2",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^3.2.4",
        "zustand": "^5.0.3"
    }
