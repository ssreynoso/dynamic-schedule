{
    "name": "dynamic-schedule",
    "version": "1.0.1",
    "type": "module",
    "description": "A dynamic schedule component library for React with drag & drop functionality",
    "author": "Santiago Reynoso <s.reynosodunjo@gmail.com> (https://github.com/ssreynoso)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ssreynoso/dynamic-schedule.git"
    },
    "bugs": {
        "url": "https://github.com/ssreynoso/dynamic-schedule/issues"
    },
    "homepage": "https://github.com/ssreynoso/dynamic-schedule#readme",
    "keywords": [
        "react",
        "schedule",
        "calendar",
        "drag-and-drop",
        "component",
        "typescript"
    ],
    "main": "./dist/dynamic-schedule.cjs",
    "module": "./dist/dynamic-schedule.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/dynamic-schedule.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/dynamic-schedule.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "@dnd-kit/core": "^6.0.0",
