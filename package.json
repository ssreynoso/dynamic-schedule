        "react-dom": "^18.0.0 || ^19.0.0",
        "zustand": "^4.0.0 || ^5.0.0"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:types": "tsc -p tsconfig.lib.json",
        "lint": "eslint .",
        "preview": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "@radix-ui/react-separator": "^1.1.2"
